<div class="row">
    <div class="col">
        <form id="formCadastroTipoAnimal">
            <div class="form-group">
                <div class="form-floating mb-3">
                    <input type="text" readonly class="form-control-plaintext" id="cdtipoAnimal" name="cdtipoAnimal" value="{{codigo}}">
                    <label for="cdtipoAnimal">Código:</label>
                  </div>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="tipoAnimal" name="tipoAnimal" value="{{descricao}}"
                        placeholder="">
                    <label for="tipoAnimal">Descrição do Tipo do Animal</label>
                </div>

                {{select|raw}}

                <hr>

                {% if exibirExcluir %}
                <div class="row">
                    <div class="col mb-2"><button id="btnExcluir" onclick="excluirCadastroTipoAnimal()" class="btn btn-danger w-100" type="button"><b><i class="bi bi-trash3-fill"></i> Excluir</b></button></div>
                </div>
                {% endif %}
                {% if exibirSalvar %}
                <div class="row">
                    <div class="col"><button id="btnSalvar" onclick="salvarCadastroTipoAnimal()" class="btn btn-primary w-100" type="button"><i class="bi bi-floppy2-fill"></i> <b>Salvar</b></button></div>
                </div>
                {% endif %}

            </div>
        </form>
    </div>
 </div>