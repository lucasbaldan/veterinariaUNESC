<div class="container">
    <div class="row">
        <form id="formBuscaRapidaAnimal" class="row mb-2">
            <div class="col-md-3">
                <div class="form-group">
                    <label for="">Nome do animal: </label>
                    <input type="text" class="form-control" id="nmAnimalModal" name="nmAnimalModal">
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="cpfPessoa">Tipo de Animal </label>
                    <input type="text" class="form-control" id="tipoAnimalModal" name="tipoAnimalModal">
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="anoNascimentoModal">Ano de Nascimento: </label>
                    <input type="text" maxlength="4" class="form-control" id="anoNascimentoModal" name="anoNascimentoModal" placeholder="">
