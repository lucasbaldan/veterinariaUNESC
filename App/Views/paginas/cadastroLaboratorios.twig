    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/veterinaria/paginas/inicial"><i
                    class="bi bi-house-door-fill"></i></a></li>
        <li class="breadcrumb-item" aria-current="page">Laborat贸rios</li>
        <li class="breadcrumb-item" aria-current="page">Cadastro</li>
    </ol>
</nav>

<div class="container-fluid d-flex justify-content-center align-items-center mt-2">
    <div class="card rounded" style="min-width: 100%;">
        <div class="card-body border border-1S rounded-2">
            <form id="formCadastroLaboratorios" name="formCadastroLaboratorios">
                <div class="text-center mt-2">
                    <h4>Cadastro de Laborat贸rio</h4>
                    <hr>
                </div>
                <!-- <div class="text-end">
                    <button type="button" onclick="gerarPDF()"><i class="bi bi-printer"></i></button>
                </div> -->

                <div class="row">
                    <div class="col-3 mb-4">
                        <label for="cdLaboratorio" class="form-label">C贸digo: </label>
                        <input type="text" readonly class="form-control" id="cdLaboratorio" name="cdLaboratorio"
                            value="{{cdLaboratorio}}">
                    </div>

                    <div class="col-6"></div>

                    <div class="col-3 mb-4">
                        <label for="ativo" class="form-label">Ativo </label>
                        {{selectAtivoLaboratorio|raw}}
                    </div>
                    <div class="mb-4 col-md-12">
                        <label for="nmLaboratorio" class="form-label">Nome</label>
                        <input type="text" class="form-control" id="nmLaboratorio" name="nmLaboratorio" placeholder=" "
                            value="{{nmLaboratorio}}" required>
                    </div>
                </div>
            </form>

            {% if exibeGaleria %}
            <div class="accordion mb-3" id="accordionAnexos">
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse"
                            data-bs-target="#panelAnexos" aria-expanded="true"
                            aria-controls="panelsStayOpen-collapseOne">
                            Logo do laborat贸rio
                        </button>
                    </h2>
                    <div id="panelAnexos" class="accordion-collapse collapse show">
                        <div class="accordion-body">
                            <input type="file" class="my-pond" name="logoLaboratorio" />
                            <br>
                            <hr>
                            <div id="galeriaDIV" class="row">
                                {% for imagem in urlGaleria %}
                                <div class="col-md-4 mb-3">
                                    <div class="gallery-item border rounded position-relative">
                                        <a href="/veterinaria/server/midia/laboratorio/{{ imagem }}"
                                            data-fancybox="gallery-a" data-caption="Anexo/imagem - {{ animal }}">
                                            <img src="/veterinaria/server/midia/laboratorio/{{ imagem }}"
                                                class="img-fluid" alt="Imagem">
                                        </a>
                                        <button class="btn btn-danger btn-sm btn-excluir-galeria w-100"
                                            id="{{ imagem }}">
                                            <i class="bi bi-trash"></i></button>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}

        </div>
    </div>
</div>

<div class="container-fluid d-flex justify-content-center align-items-center mt-2 mb-3">
    <div class="card rounded" style="min-width: 100%;">
        <div class="card-body border border-1S rounded-2">
            <div class="row">
                <div class="col">
                    <a class="btn btn-warning w-100 call-screen" type="button"
                        href="/veterinaria/paginas/listLaboratorios"><i class="bi bi-sign-turn-left-fill"></i>
                        <b>Voltar</b></a>
                </div>

                {% if exibeExcluir %}
                <div class="col">
                    <button class="btn btn-danger w-100" type="button" onclick="excluirCadastroLaboratorios()"><b><i
                                class="bi bi-trash3-fill"></i>
                            Excluir</b></button>
                </div>
                {% endif %}

                {% if exibeSalvar %}
                <div class="col">
                    <button class="btn btn-primary w-100" onclick="salvarCadastroLaboratorios()"><i
                            class="bi bi-floppy2-fill"></i>
                        <b>Salvar</b></button>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>